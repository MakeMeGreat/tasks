<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".task1.Task1Fragment2">

    <TextView
        android:id="@+id/fragment_number_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fragment 2"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/previous_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="previous"
        app:layout_constraintTop_toBottomOf="@id/fragment_number_text_view"
        app:layout_constraintEnd_toStartOf="@id/next_button"
        android:layout_margin="16dp"
        app:layout_constraintStart_toStartOf="@id/fragment_number_text_view"/>

    <Button
        android:id="@+id/next_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="next"
        android:layout_margin="16dp"
        app:layout_constraintStart_toEndOf="@id/previous_button"
        app:layout_constraintEnd_toEndOf="@id/fragment_number_text_view"
        app:layout_constraintTop_toBottomOf="@id/fragment_number_text_view"/>

</androidx.constraintlayout.widget.ConstraintLayout>